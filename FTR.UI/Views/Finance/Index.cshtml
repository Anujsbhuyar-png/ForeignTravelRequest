@page
<div class="container mt-4">
    <h1 class="fw-bold">Finance & Travel</h1>

    <!-- Advance Payment Request Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <h5 class="card-title mb-0">Advance Payment Request</h5>
                <p class="text-muted">For FTR001 - Germany Work Permit</p>
            </div>
            <span class="badge bg-warning text-dark">Pending Approval</span>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <!-- Advance Amount -->
                <div class="col-md-6">
                    <label for="advanceAmount" class="form-label">Advance Amount</label>
                    <div class="input-group">
                        <select class="form-select" id="currency">
                            <option selected>EUR</option>
                            <option value="USD">USD</option>
                            <option value="GBP">GBP</option>
                            <option value="INR">INR</option>
                        </select>
                        <input type="text" class="form-control" id="advanceAmount" placeholder="1000.00">
                    </div>
                </div>

                <!-- Approval Status -->
                <div class="col-md-6">
                    <label class="form-label">Approval Status</label>
                    <div class="d-flex align-items-center p-2 border rounded bg-light">
                        <i class="bi bi-clock text-warning me-2"></i>
                        <span>Pending Finance Manager Approval</span>
                    </div>
                </div>

                <!-- Purpose of Advance -->
                <div class="col-12">
                    <label for="purpose" class="form-label">Purpose of Advance</label>
                    <textarea class="form-control" id="purpose" placeholder="Travel expenses, accommodation, and local transportation"></textarea>
                </div>

                <!-- Bank Details -->
                <div class="col-12">
                    <label class="form-label">Bank Details</label>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="Account Number">
                        </div>
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="Bank Name">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Travel Arrangements Card -->
    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="card-title mb-0">Travel Arrangements</h5>
        </div>
        <div class="card-body">
            <div class="alert alert-primary d-flex align-items-center" role="alert">
                <i class="bi bi-info-circle me-2"></i>
                <div>Travel arrangements will be processed after visa approval and finance clearance.</div>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <div class="p-3 border rounded bg-light">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-clock text-warning me-2"></i>
                            <span class="fw-medium">Flight Arrangements</span>
                        </div>
                        <p class="text-muted mb-0">Pending visa approval</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-3 border rounded bg-light">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-clock text-warning me-2"></i>
                            <span class="fw-medium">Accommodation</span>
                        </div>
                        <p class="text-muted mb-0">Pending visa approval</p>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <button class="btn btn-secondary" disabled>Confirm Travel Details</button>
            </div>
        </div>
    </div>
</div>
